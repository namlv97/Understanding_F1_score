    {
      "cell_type": "code",
      "source": [
        "def cal_TP_FP_FN(y_true,y_pred,pos_label=0):\n",
        "  # shape of y_true: (num_samples,)\n",
        "  # shape of y_pred: (num_samples,)\n",
        "\n",
        "  _pos_label=np.where(y_true==pos_label)[0]\n",
        "  _neg_label=np.where(y_true!=pos_label)[0]\n",
        "  \n",
        "  pred_pos_label=np.take(y_pred,_pos_label)\n",
        "  pred_neg_label=np.take(y_pred,_neg_label)\n",
        "\n",
        "  TP=np.count_nonzero(pred_pos_label==pos_label)\n",
        "  FN=len(pred_pos_label)-TP\n",
        "\n",
        "  TN=np.count_nonzero(pred_neg_label!=pos_label)\n",
        "  FP=len(pred_neg_label)-TN\n",
        "\n",
        "  return TP,FP,FN"
      ],
      "metadata": {
        "id": "izazqeqWlWwQ"
      },
      "execution_count": 34,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def cal_precision(TP,FP):\n",
        "  return TP/(TP+FP)"
      ],
      "metadata": {
        "id": "Svqc4w7-qh6e"
      },
      "execution_count": 35,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def cal_recall(TP,FN):\n",
        "  return TP/(TP+FN)"
      ],
      "metadata": {
        "id": "kGkbKhxEqqeq"
      },
      "execution_count": 36,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "def cal_f1_score(precision,recall):\n",
        "  return 2*(precision*recall)/(precision+recall)"
      ],
      "metadata": {
        "id": "wdUTXvL8quWR"
      },
      "execution_count": 37,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "TP,FP,FN=cal_TP_FP_FN(y_true,y_pred,pos_label=0)\n",
        "label_0_precision=cal_precision(TP,FP)\n",
        "label_0_recall=cal_recall(TP,FN)\n",
        "label_0_f1_score=cal_f1_score(label_0_precision,label_0_recall)\n",
        "label_0_f1_score"
