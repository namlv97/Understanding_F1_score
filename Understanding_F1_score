        "##Weighted"
      ],
      "metadata": {
        "id": "MkRzph02YRMP"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "def cal_weighted_f1_score_for_multi_label(y_true,y_pred,labels=None):\n",
        "  if labels==None:\n",
        "    labels=np.unique(y_true)\n",
        "    \n",
        "  sample_totals=0\n",
        "  weighted_f1_score=0\n",
        "  for label in labels:\n",
        "    _y_true=y_true[:,label]\n",
        "    _y_pred=y_pred[:,label]\n",
        "    TP,FP,FN=cal_TP_FP_FN(_y_true,_y_pred,pos_label=1)\n",
        "    precision=cal_precision(TP,FP)\n",
        "    recall=cal_recall(TP,FN)\n",
        "    f1=cal_f1_score(precision,recall)\n",
        "    num_samples=np.count_nonzero(_y_true==1)\n",
        "    sample_totals+=num_samples\n",
        "    weighted_f1_score+=f1*num_samples\n",
        "\n",
        "  return weighted_f1_score/sample_totals"
      ],
      "metadata": {
        "id": "CioM4QavWFho"
      },
      "execution_count": 144,
      "outputs": []
    },
