      "source": [
        "##Samples"
      ],
      "metadata": {
        "id": "DoDs7q6rYx-p"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "def cal_samples_f1_score_for_multi_label(y_true,y_pred):\n",
        "  samples_f1_score=0\n",
        "  for i in range(len(y_true)):\n",
        "    _y_true=y_true[i,:]\n",
        "    _y_pred=y_pred[i,:]\n",
        "    TP,FP,FN=cal_TP_FP_FN(_y_true,_y_pred,pos_label=1)\n",
        "    precision=cal_precision(TP,FP)\n",
        "    recall=cal_recall(TP,FN)\n",
        "    if recall==0 or precision==0:\n",
        "      f1=0\n",
        "    else:\n",
        "      f1=cal_f1_score(precision,recall)\n",
        "    samples_f1_score+=f1\n",
        "\n",
        "  return samples_f1_score/len(y_true)"
      ],
      "metadata": {
        "id": "cYr5aKQXXKr8"
      },
      "execution_count": 156,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "cal_samples_f1_score_for_multi_label(y_true,y_pred)"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "cnfu5wuKZOpN",
        "outputId": "174d1f62-e9a4-4b3a-8098-265d86d0e7e6"
      },
      "execution_count": 157,
